{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "lib": ["ES2022", "DOM", "esnext.intl"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
